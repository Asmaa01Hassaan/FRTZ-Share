<odoo>
    <!-- نرث من الـ web client template عشان نقدر نستدعي الـ menu -->
    <template id="sale_order_plus_menu" name="Sale Order Plus Menu">
        <t t-set="menu_items"
           t-value="request.env['ir.ui.menu'].search([('parent_id', '=', request.env.ref('sale.menu_sale_root').id)])"/>
        <div class="o_sale_plus_menu_container">
            <button type="button" class="btn btn-primary o_sale_plus_button">
                +
            </button>
            <div class="o_sale_menu_dropdown d-none">
                <ul>
                    <t t-foreach="menu_items" t-as="m">
                        <li>
                            <a t-attf-href="/web#menu_id=#{m.id}">
                                <t t-esc="m.name"/>
                            </a>
                        </li>
                    </t>
                </ul>
            </div>
        </div>
    </template>
</odoo>