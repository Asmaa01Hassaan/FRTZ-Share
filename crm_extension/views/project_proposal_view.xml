<odoo>
    <record id="view_project_proposal_list" model="ir.ui.view">
        <field name="name">project.proposal.list</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <list string="Proposals">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="proposal_date"/>
                <field name="expected_revenue"/>
                <field name="is_completed"/>
            </list>
        </field>
    </record>

    <record id="view_project_proposal_form" model="ir.ui.view">
        <field name="name">project.proposal.form</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <form string="Project Proposal">
                <header>
                    <button name="action_kick_off" string="Kick Off" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_proposal_build_up" string="Build Up" type="object" class="oe_highlight"
                            invisible="state != 'kick_off'"/>

                    <button name="action_negotiation" string="Negotiation" type="object" class="oe_highlight"
                            invisible="state != 'proposal_build_up'"/>

                    <button name="action_pending" string="Pending Proposal" type="object" class="oe_highlight"
                            invisible="state != 'negotiation'"/>

                    <button name="action_won_ongoing" string="Won/Ongoing" type="object" class="oe_highlight"
                            invisible="state != 'pending'"/>

                    <button name="action_won_done" string="Won/Done" type="object" class="oe_highlight"
                            invisible="state != 'won_ongoing'"/>

                    <button name="action_collection" string="Collection" type="object" class="oe_highlight"
                            invisible="state != 'won_done'"/>

                    <button name="action_set_won" string="Won" type="object" class="btn-success"
                            invisible="state in ['won', 'lost', 'draft']"/>

                    <button name="action_set_lost" string="Lost" type="object" class="btn-danger"
                            invisible="state in ['won', 'lost']"/>

                    <field name="state" widget="statusbar" readonly="True"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase" type="object" class="oe_stat_button" icon="fa-credit-card">
                            <field name="purchase_count" string="Purchase" widget="statinfo"/>
                        </button>

                        <button name="action_view_sales" type="object" class="oe_stat_button" icon="fa-usd">
                            <field name="sale_count" string="Sale" widget="statinfo"/>
                        </button>

                        <button name="action_view_invoices" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="invoice_count" string="Invoices" widget="statinfo"/>
                        </button>

                        <button name="action_view_bills" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="bill_count" string="Bills" widget="statinfo"/>
                        </button>

                        <button name="action_view_entries" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="entry_count" string="Entries" widget="statinfo"/>
                        </button>

                        <button name="action_view_projects" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="project_count" string="Projects" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <group>
                                <field name="partner_id"/>
                                <field name="commercial_partner"/>
                                <field name="analytic_account_id"/>
                                <field name="project_id"/>
                                <field name="profitability_responsible_id"/>
                                <field name="sales_responsible_id"/>
                                <field name="finance_responsible_id"/>
                                <field name="currency_id"/>
                                <field name="is_completed"/>
                                <field name="lost_reason_id"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group>
                                <label for="proposal_type_id" string="type"
                                       style="font-size: 30px; font-weight: bold;"/>
                                <field name="proposal_type_id" nolabel="1"/>
                                <!--                                <field name="proposal_staging_id"/>-->
                                <field name="proposal_date"/>
                                <field name="proposal_submission_date"/>
                                <field name="expected_closing_date"/>
                                <field name="project_start_date"/>
                                <field name="project_end_date"/>
                                <field name="contract_date"/>
                            </group>
                        </div>
                    </div>

                    <hr style="border-top: 2px solid #eee; margin: 20px 0;"/>

                    <div class="row text-center">
                        <div class="col-4">
                            <group string="Expected" priority="1">
                                <field name="expected_revenue"/>
                                <field name="expected_cost"/>
                                <field name="expected_margin"/>
                                <field name="expected_margin_percentage" widget="percentage"/>
                            </group>
                        </div>
                        <div class="col-4">
                            <group string="Contracted" priority="2">
                                <field name="contracted_revenue"/>
                                <field name="contracted_cost"/>
                                <field name="contracted_margin"/>
                                <field name="contracted_margin_percentage" widget="percentage"/>
                            </group>
                        </div>
                        <div class="col-4">
                            <group string="Actual" priority="3">
                                <field name="actual_revenue"/>
                                <field name="actual_cost"/>
                                <field name="actual_margin"/>
                                <field name="actual_margin_percentage" widget="percentage"/>
                            </group>
                        </div>
                    </div>

                    <hr style="border-top: 2px solid #ddd; margin: 20px 0;"/>

                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <group>
                                <field name="financial_progress" widget="percentage"/>
                            </group>
                        </div>
                        <div class="col-4">
                            <group>
                                <field name="project_progress" widget="percentage"/>
                            </group>
                        </div>
                    </div>
                    <notebook>
                        <page string="Customer Interested Services">
                            <div class="row">
                                <div class="col-4">
                                    <label for="product" string="Product"/>
                                    <field name="product"/>
                                </div>
                                <div class="col-4">
                                    <label for="quantity" string="Quantity"/>
                                    <field name="quantity"/>
                                </div>
                                <div class="col-4">
                                    <label for="cost_price" string="Cost"/>
                                    <field name="cost_price"/>
                                </div>
                            </div>
                        </page>
                        <page string="Proposal Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="category_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="subtotal"/>
                                    <field name="total"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="view_proposal_pivot" model="ir.ui.view">
        <field name="name">project.proposal.pivot</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <pivot string="Proposals Analysis" sample="1">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>

                <field name="expected_revenue" type="measure"/>
                <field name="expected_cost" type="measure"/>
                <field name="expected_margin" type="measure"/>

                <field name="actual_revenue" type="measure"/>
                <field name="contracted_revenue" type="measure"/>
                <field name="project_progress" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_project_proposal_calendar" model="ir.ui.view">
        <field name="name">project.proposal.calendar</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <calendar
                    string="Project Proposals Calendar"
                    date_start="project_start_date"
                    date_stop="project_end_date"
                    color="state"
                    mode="month">

                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="sales_responsible_id"/>
            </calendar>
        </field>
    </record>

    <record id="project_proposal_activity_view" model="ir.ui.view">
        <field name="name">project.proposal.activity</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <activity string="Project Proposals">
                <field name="name"/>
                <field name="partner_id" avatar_field="image_128"/>
                <field name="expected_closing_date"/>
                <field name="sales_responsible_id"/>
                <field name="state"/>
                <field name="proposal_type_id"/>
                <field name="project_id"/>
                <!--                <progressbar field="project_progress"/>-->
            </activity>
        </field>
    </record>

    <record id="project_proposal_kanban_view" model="ir.ui.view">
        <field name="name">project.proposal.kanban</field>
        <field name="model">project.proposal</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban"
                    on_create="quick_create" quick_create_view="project_proposal.quick_create_proposal_form">
                <field name="stage_id"/>
                <field name="state"/>
                <field name="lost_reason_id"/>
                <field name="color"/>
                <progressbar field="state" colors='{"done": "success", "lost": "danger", "draft": "warning"}' sum_field="expected_revenue"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="record.color.raw_value || 0"/>
                        <div t-attf-class="oe_kanban_color_#{color} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <t t-if="record.state.raw_value == 'lost'">
                                        <div class="o_kanban_ribbon bg-danger">
                                            <span>Lost</span>
                                        </div>
                                    </t>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div t-if="record.stage_id.raw_value" class="text-muted">
                                        <i class="fa fa-map-marker mr-1" title="Stage"/>
                                        <field name="stage_id"/>
                                    </div>
                                    <div t-if="record.state.raw_value == 'lost' and record.lost_reason_id.raw_value"
                                         class="text-danger small">
                                        <i class="fa fa-exclamation-circle mr-1"/>
                                        <field name="lost_reason_id"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_project_proposal" model="ir.actions.act_window">
        <field name="name">Proposals</field>
        <field name="res_model">project.proposal</field>
        <field name="view_mode">list,kanban,form,pivot,calendar,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Proposal!</p>
        </field>
    </record>

    <menuitem id="menu_project_proposal_root"
              name="Proposal"
              sequence="10"
    />

    <menuitem
            id="menu_project_proposal_main"
            name="Proposal"
            parent="menu_project_proposal_root"
            sequence="10"
    />

    <menuitem id="menu_project_proposal"
              name="Proposal"
              parent="menu_project_proposal_main"
              action="action_project_proposal"
              sequence="20"
    />
</odoo>