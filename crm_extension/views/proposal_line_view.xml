<odoo>
    <record id="view_proposal_line_list" model="ir.ui.view">
        <field name="name">project.proposal.line.list</field>
        <field name="model">project.proposal.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="proposal_id"/>
                <field name="product_id"/>
                <field name="category_id"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
                <field name="total"/>
            </list>
        </field>
    </record>

    <record id="view_proposal_line_form" model="ir.ui.view">
        <field name="name">project.proposal.line.form</field>
        <field name="model">project.proposal.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="proposal_id"/>
                            <field name="product_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="subtotal"/>
                            <field name="total"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_proposal_line" model="ir.actions.act_window">
        <field name="name">Proposal Lines</field>
        <field name="res_model">project.proposal.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_proposal_line"
              name="Proposal Lines"
              parent="menu_project_proposal_main"
              action="action_proposal_line"
              sequence="40"
    />
</odoo>
