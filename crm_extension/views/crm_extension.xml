<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_extension_list" model="ir.ui.view">
        <field name="name">crm.extension.list</field>
        <field name="model">crm.extension</field>
        <field name="arch" type="xml">
            <list string="Opportunity Type">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="crm_extension_form" model="ir.ui.view">
        <field name="name">crm.extension.form</field>
        <field name="model">crm.extension</field>
        <field name="arch" type="xml">
            <form string="Opportunity">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_extension_action" model="ir.actions.act_window">
        <field name="name">crm.extension.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.extension</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>

    <menuitem
        id="opportunity_menuitem_type"
        name="Opportunity Type"
        parent="crm.crm_menu_config"
        action="crm_extension_action"
         sequence="50"
    />
</odoo>