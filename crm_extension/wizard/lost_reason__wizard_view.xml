<odoo>
    <record id="view_project_proposal_lost_wizard_form" model="ir.ui.view">
        <field name="name">project.proposal.lost.wizard.form</field>
        <field name="model">project.proposal.lost.wizard</field>
        <field name="arch" type="xml">
            <form string="Mark as Lost">
                <sheet>
                    <group>
                        <field name="lost_reason_id"/>
                        <field name="lost_note"/>
                    </group>
                    <footer>
                        <button string="Mark As Lost" type="object" name="action_confirm_lost" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>