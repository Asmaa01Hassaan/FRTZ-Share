<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Permission Role List View -->
    <record id="view_laft_permission_role_tree" model="ir.ui.view">
        <field name="name">laft.permission.role.tree</field>
        <field name="model">laft.permission.role</field>
        <field name="arch" type="xml">
            <list string="Role Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="project_access"/>
                <field name="bd_access"/>
                <field name="user_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Permission Role Form View -->
    <record id="view_laft_permission_role_form" model="ir.ui.view">
        <field name="name">laft.permission.role.form</field>
        <field name="model">laft.permission.role</field>
        <field name="arch" type="xml">
            <form string="Role Template">
                <header>
                    <button name="action_apply_to_user" string="Apply to Users" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="icon" invisible="1"/>
                            <field name="name" placeholder="e.g., Project Manager - Finance"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Brief description of this role..."/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Project Permissions" name="project">
                            <group>
                                <group>
                                    <field name="project_access"/>
                                    <field name="project_see_all"/>
                                    <field name="can_create_projects"/>
                                    <field name="can_manage_tasks"/>
                                </group>
                                <group>
                                    <field name="can_view_bills"/>
                                    <field name="can_create_bills"/>
                                    <field name="can_approve_bills"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="BD Permissions" name="bd">
                            <group>
                                <field name="bd_access"/>
                            </group>
                        </page>
                        
                        <page string="Finance Permissions" name="finance">
                            <group>
                                <field name="finance_access"/>
                            </group>
                        </page>
                        
                        <page string="Administration" name="admin">
                            <group>
                                <field name="is_admin"/>
                                <field name="can_manage_permissions"/>
                            </group>
                        </page>
                        
                        <page string="Dashboards" name="dashboards">
                            <group>
                                <group>
                                    <field name="dashboard_my"/>
                                    <field name="dashboard_projects"/>
                                </group>
                                <group>
                                    <field name="dashboard_bd"/>
                                    <field name="dashboard_executive"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Technical Groups" name="technical" groups="base.group_no_one">
                            <field name="group_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Permission Role Kanban View -->
    <record id="view_laft_permission_role_kanban" model="ir.ui.view">
        <field name="name">laft.permission.role.kanban</field>
        <field name="model">laft.permission.role</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="project_access"/>
                <field name="bd_access"/>
                <field name="user_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="name"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="description"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge text-bg-primary" t-if="record.project_access.raw_value != 'none'">
                                            üèóÔ∏è Projects
                                        </span>
                                        <span class="badge text-bg-info" t-if="record.bd_access.raw_value != 'none'">
                                            üíº BD
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_count"/> users
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Action: Role Templates -->
    <record id="action_laft_permission_role" model="ir.actions.act_window">
        <field name="name">Role Templates</field>
        <field name="res_model">laft.permission.role</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first role template
            </p>
            <p>
                Role templates help you quickly assign common permission sets to users.
            </p>
        </field>
    </record>
    
</odoo>

