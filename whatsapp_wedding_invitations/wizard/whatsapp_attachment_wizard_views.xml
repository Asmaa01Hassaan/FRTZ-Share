<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Attachment Wizard Form View -->
    <record id="view_whatsapp_attachment_wizard_form" model="ir.ui.view">
        <field name="name">whatsapp.attachment.wizard.form</field>
        <field name="model">whatsapp.attachment.wizard</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Attachments">
                <sheet>
                    <group>
                        <group>
                            <field name="event_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Select Guests">
                        <field name="guest_ids" widget="many2many_tags" 
                               options="{'color_field': 'invitation_status'}"
                               nolabel="1"/>
                    </group>
                    <group string="Select Attachments">
                        <field name="attachment_ids" widget="many2many_tags" 
                               nolabel="1"
                               domain="[('res_model', '=', 'calendar.event'), ('res_id', '=', event_id)]"/>
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"/> Select one or more attachments to send. Maximum file size: 10 MB per attachment.
                        </div>
                    </group>
                    <group string="Message">
                        <group colspan="2">
                            <field name="message" 
                                   placeholder="Message to send with attachments. Use {name} for guest name."
                                   nolabel="1"/>
                        </group>
                    </group>
                    <group invisible="not send_progress">
                        <field name="send_progress" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="ðŸ“Ž Send Attachments" name="action_send_attachments" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>




