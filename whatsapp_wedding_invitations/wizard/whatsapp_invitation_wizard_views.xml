<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Invitation Wizard Form View -->
    <record id="view_whatsapp_invitation_wizard_form" model="ir.ui.view">
        <field name="name">whatsapp.invitation.wizard.form</field>
        <field name="model">whatsapp.invitation.wizard</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Invitations">
                <sheet>
                    <group>
                        <group>
                            <field name="event_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="send_mode" widget="radio"/>
                        </group>
                    </group>
                    <group string="Select Guests">
                        <field name="guest_ids" widget="many2many_tags" 
                               options="{'color_field': 'invitation_status'}"
                               nolabel="1"/>
                    </group>
                    <group string="Message">
                        <group colspan="2">
                            <field name="message_template" 
                                   placeholder="Message template. Use {name}, {event_name}, {date}, {venue}, {time}, {image_url} as placeholders."
                                   nolabel="1"/>
                        </group>
                    </group>
                    <group string="Image Attachment" invisible="send_mode == 'text_only'">
                        <group>
                            <label for="invitation_image" string="Invitation Image (PNG/JPG)"/>
                            <div class="o_row">
                                <field name="invitation_image" widget="image" 
                                       options="{'preview_image': True, 'size': [200, 200]}"
                                       class="oe_avatar"/>
                                <field name="invitation_image_filename" invisible="1"/>
                            </div>
                            <div class="text-muted">
                                <i class="fa fa-info-circle"/> This image will be sent as an attachment to WhatsApp (PNG, JPG, or GIF format).
                            </div>
                        </group>
                        <group>
                            <div class="alert alert-info">
                                <i class="fa fa-whatsapp"/> The image will be automatically compressed if needed and sent as a media attachment to each guest.
                            </div>
                        </group>
                    </group>
                    <group invisible="not send_progress">
                        <field name="send_progress" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="ðŸ“± Send Invitations" name="action_send_invitations" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
