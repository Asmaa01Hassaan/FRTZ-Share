<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp Invitation Wizard Form View -->
    <record id="view_whatsapp_invitation_wizard_form" model="ir.ui.view">
        <field name="name">whatsapp.invitation.wizard.form</field>
        <field name="model">whatsapp.invitation.wizard</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Invitations">
                <sheet>
                    <group>
                        <group>
                            <field name="event_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="guest_ids" widget="many2many_tags" 
                               options="{'color_field': 'invitation_status'}"
                               nolabel="1"/>
                    </group>
                    <group>
                        <field name="message_template" 
                               placeholder="Message template for invitations. Use {name}, {event_name}, {date}, {venue}, {time} as placeholders."
                               nolabel="1"/>
                    </group>
                    <group>
                        <field name="send_progress" readonly="1" nolabel="1" 
                               invisible="not send_progress"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Send Invitations" name="action_send_invitations" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_event_whatsapp_invitation_wizard_form" model="ir.ui.view">
        <field name="name">event.whatsapp.invitation.wizard.form</field>
        <field name="model">event.whatsapp.invitation.wizard</field>
        <field name="arch" type="xml">
            <form string="Send WhatsApp Invitations">
                <sheet>
                    <group>
                        <group>
                            <field name="event_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="registration_ids" widget="many2many_tags"
                               options="{'color_field': 'whatsapp_invitation_status'}"
                               nolabel="1"/>
                    </group>
                    <group>
                        <field name="message_template"
                               placeholder="Message template for invitations. Use {name}, {event_name}, {date}, {venue}, {time} as placeholders."
                               nolabel="1"/>
                    </group>
                    <group>
                        <field name="send_progress" readonly="1" nolabel="1"
                               invisible="not send_progress"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Send Invitations" name="action_send_invitations"
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

