<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WhatsApp QR Session Form View -->
    <record id="view_whatsapp_qr_session_form" model="ir.ui.view">
        <field name="name">whatsapp.qr.session.form</field>
        <field name="model">whatsapp.qr.session</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Connection">
                <header>
                    <button name="action_refresh_qr"
                            type="object"
                            string="Refresh QR Code"
                            class="btn-primary"
                            icon="fa-refresh"/>
                    <button name="action_check_status"
                            type="object"
                            string="Check Connection"
                            class="btn-secondary"
                            icon="fa-check-circle"/>
                    <button name="action_restart_server"
                            type="object"
                            string="Restart Server"
                            class="btn-warning"
                            icon="fa-power-off"
                            confirm="Are you sure you want to restart the WhatsApp Server? This will wait 15 seconds for reconnection."/>
                    <button name="action_check_odoo_server"
                            type="object"
                            string="Check Odoo Server"
                            class="btn-info"
                            icon="fa-server"
                            confirm="This will wait 20 seconds then check if Odoo server is responding. Continue?"/>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="disconnected,qr_ready,connected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Session Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="server_url" readonly="1"/>
                            <field name="container_name" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="QR Code" name="qr_code">
                            <group>
                                <field name="qr_code_image" 
                                       widget="image" 
                                       class="oe_avatar"
                                       options="{'size': [400, 400]}"/>
                            </group>
                            <group>
                                <field name="qr_code_text" readonly="1"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Instructions:</strong>
                                <ol>
                                    <li>Click "Refresh QR Code" to generate a new QR code</li>
                                    <li>Open WhatsApp on your phone</li>
                                    <li>Go to Settings → Linked Devices → Link a Device</li>
                                    <li>Scan the QR code displayed above</li>
                                    <li>Click "Check Connection" to verify the connection</li>
                                </ol>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WhatsApp QR Session List View -->
    <record id="view_whatsapp_qr_session_list" model="ir.ui.view">
        <field name="name">whatsapp.qr.session.list</field>
        <field name="model">whatsapp.qr.session</field>
        <field name="arch" type="xml">
            <list string="WhatsApp Sessions">
                <field name="name"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'connected'"
                       decoration-warning="status == 'qr_ready'"
                       decoration-danger="status == 'disconnected'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- WhatsApp QR Session Action -->
    <record id="action_whatsapp_qr_session" model="ir.actions.act_window">
        <field name="name">WhatsApp Connection</field>
        <field name="res_model">whatsapp.qr.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a WhatsApp session to connect
            </p>
            <p>
                Click "Create" to start a new WhatsApp connection session.
            </p>
        </field>
    </record>

    <!-- Root Menu Item -->
    <menuitem id="menu_whatsapp_invitations_root"
              name="WhatsApp Invitations"
              web_icon="whatsapp_wedding_invitations,static/description/icon.png"
              sequence="50"/>

    <!-- WhatsApp Connection Menu -->
    <menuitem id="menu_whatsapp_qr_session"
              name="WhatsApp Connection"
              parent="menu_whatsapp_invitations_root"
              action="action_whatsapp_qr_session"
              sequence="10"/>
    
    <!-- Configuration Menu -->
    <menuitem id="menu_whatsapp_configuration"
              name="Configuration"
              parent="menu_whatsapp_invitations_root"
              sequence="100"/>
</odoo>

