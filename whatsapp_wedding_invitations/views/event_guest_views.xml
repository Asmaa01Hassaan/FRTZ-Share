<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Event Guest List View -->
    <record id="view_event_guest_list" model="ir.ui.view">
        <field name="name">event.guest.list</field>
        <field name="model">event.guest</field>
        <field name="arch" type="xml">
            <list string="Guests">
                <field name="name"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="event_id"/>
                <field name="invitation_status" widget="badge" 
                       decoration-success="invitation_status == 'sent'"
                       decoration-danger="invitation_status == 'failed'"
                       decoration-muted="invitation_status == 'not_sent'"/>
                <field name="rsvp_status" widget="badge"
                       decoration-success="rsvp_status == 'accepted'"
                       decoration-danger="rsvp_status == 'declined'"
                       decoration-muted="rsvp_status == 'pending'"/>
            </list>
        </field>
    </record>

    <!-- Event Guest Form View -->
    <record id="view_event_guest_form" model="ir.ui.view">
        <field name="name">event.guest.form</field>
        <field name="model">event.guest</field>
        <field name="arch" type="xml">
            <form string="Guest">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="phone_number" required="1"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="event_id"/>
                            <field name="invitation_status"/>
                            <field name="invitation_sent_date" readonly="1"/>
                            <field name="rsvp_status"/>
                        </group>
                    </group>
                    <group>
                        <field name="invitation_error" readonly="1" 
                               invisible="invitation_status != 'failed'"/>
                        <field name="message_id" readonly="1"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Event Guest Search View -->
    <record id="view_event_guest_search" model="ir.ui.view">
        <field name="name">event.guest.search</field>
        <field name="model">event.guest</field>
        <field name="arch" type="xml">
            <search string="Guests">
                <field name="name"/>
                <field name="phone_number"/>
                <field name="email"/>
                <field name="event_id"/>
                <filter string="Invitation Sent" name="invitation_sent" 
                        domain="[('invitation_status', '=', 'sent')]"/>
                <filter string="Invitation Failed" name="invitation_failed" 
                        domain="[('invitation_status', '=', 'failed')]"/>
                <filter string="Not Sent" name="invitation_not_sent" 
                        domain="[('invitation_status', '=', 'not_sent')]"/>
                <filter string="RSVP Accepted" name="rsvp_accepted" 
                        domain="[('rsvp_status', '=', 'accepted')]"/>
                <filter string="RSVP Declined" name="rsvp_declined" 
                        domain="[('rsvp_status', '=', 'declined')]"/>
            </search>
        </field>
    </record>

    <!-- Event Guest Action -->
    <record id="action_event_guest" model="ir.actions.act_window">
        <field name="name">Event Guests</field>
        <field name="res_model">event.guest</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_event_guest_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first guest!
            </p>
            <p>
                Add guests to events and send them WhatsApp invitations.
            </p>
        </field>
    </record>
</odoo>

