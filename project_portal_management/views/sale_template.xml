<odoo>
    <template id="template_project_sale_orders" name="Project Sale Orders List">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="fw-bold mb-0">Sale Orders</h3>
                        <small class="text-muted">المشروع:
                            <t t-esc="project.name"/>
                        </small>
                    </div>
                    <a t-attf-href="/my/sale_order/create?project_id=#{project.id}"
                       class="btn btn-info text-white shadow-sm">
                        <i class="fa fa-plus me-1"></i>
                        New Sale Order
                    </a>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Reference</th>
                                    <th>Date</th>
                                    <th>Customer Ref</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="sale_orders">
                                    <t t-foreach="sale_orders" t-as="order">
                                        <tr>
                                            <td class="ps-4 fw-bold">
                                                <t t-esc="order.name"/>
                                            </td>
                                            <td>
                                                <span t-field="order.date_order" t-options='{"widget": "date"}'/>
                                            </td>
                                            <td>
                                                <t t-esc="order.client_order_ref or '-'"/>
                                            </td>
                                            <td>
                                                <span t-field="order.amount_total"/>
                                            </td>
                                            <td>
                                                <span t-attf-class="badge rounded-pill #{'bg-success' if order.state == 'sale' else 'bg-info'}">
                                                    <t t-esc="dict(order._fields['state'].selection).get(order.state)"/>
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a t-attf-href="/my/orders/#{order.id}"
                                                   class="btn btn-sm btn-outline-info">View
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="6" class="text-center py-5 text-muted">No orders found.</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <a t-attf-href="/my/project/view/#{project.id}" class="text-muted">
                        <i class="fa fa-arrow-left"></i>
                        Back to Project
                    </a>
                </div>
            </div>
        </t>
    </template>

    <template id="template_sale_order_create" name="Portal Create Sale Order">
        <t t-call="website.layout">
            <div class="container my-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h3 class="fw-bold mb-0"><i class="fa fa-cart-plus me-2 text-info"></i>Create Sale Order
                        </h3>
                        <small class="text-muted">إنشاء أمر بيع جديد</small>
                    </div>
                    <a t-attf-href="/my/project/sale_orders?project_id=#{project.id}"
                       class="btn btn-outline-secondary btn-sm">
                        <i class="fa fa-arrow-left me-1"></i>
                        Back to List
                    </a>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <t t-if="error_message">
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="fa fa-exclamation-circle me-2"></i>
                                <t t-esc="error_message"/>
                            </div>
                        </t>

                        <form action="/my/sale_order/create/save" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="project_id" t-att-value="project.id"/>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Project</label>
                                    <input type="text" class="form-control bg-light" t-att-value="project.name"
                                           readonly="1"/>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Customer</label>
                                    <input type="text" class="form-control bg-light"
                                           t-att-value="partner.name if partner else 'No Customer Assigned'"
                                           readonly="1"/>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Amount</label>
                                    <input type="number" name="amount" class="form-control" step="0.01" required="1"
                                           t-att-value="post.get('amount') if post else ''"/>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Customer Reference</label>
                                    <input type="text" name="ref" class="form-control"
                                           t-att-value="post.get('ref') if post else ''"/>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Description</label>
                                <input type="text" name="description" class="form-control" required="1"
                                       t-att-value="post.get('description') if post else ''"/>
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a t-attf-href="/my/project/view/#{project.id}" class="btn btn-light">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-info text-white px-4">
                                    <i class="fa fa-check me-1"></i>
                                    Create Quotation
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>