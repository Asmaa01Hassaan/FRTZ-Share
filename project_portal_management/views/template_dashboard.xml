<odoo>
    <record id="menu_portal_dashboard" model="website.menu">
        <field name="name">Portal Dashboard</field>
        <field name="url">/my/portal-dashboard</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">50</field>
    </record>

    <template id="my_custom_dashboard" name="My Argon Dashboard">
        <t t-call="website.layout">
            <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&amp;display=swap"
                  rel="stylesheet"/>
            <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"/>

            <div class="layout-wrapper layout-content-navbar">
                <div class="layout-container">

                    <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

                        <span style="padding-top:15px;" class="app-brand-text demo menu-text fw-bold ms-2">LAFT</span>

                        <div class="menu-divider mt-0"></div>
                        <ul class="menu-inner py-1">
                            <li t-attf-class="menu-item #{'active' if active_page == 'project_hub' else ''}">
                                <a href="/my/portal-dashboard/project_hub" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-grid-alt"></i>
                                    <div>Project Hub</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="#" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-pyramid"></i>
                                    <div>Services Catalog</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="#" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-bar-chart-alt-2"></i>
                                    <div>Executive Dashboard</div>
                                </a>
                            </li>
                            <li class="menu-header small text-uppercase">
                                <span class="menu-header-text"
                                      style="color: #a1acb8; font-size: 0.75rem; font-weight: 600;">Departments
                                </span>
                            </li>
                            <li class="menu-item">
                                <a href="#" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-group"></i>
                                    <div>Human Resources</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="#" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-wallet"></i>
                                    <div>Finance</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="#" class="menu-link">
                                    <i class="menu-icon tf-icons bx bx-clipboard"></i>
                                    <div>PMO</div>
                                </a>
                            </li>
                        </ul>
                    </aside>

                    <div class="layout-page">
                        <nav class="layout-navbar container-xxl navbar-detached navbar navbar-expand-xl align-items-center bg-navbar-theme"
                             id="layout-navbar">
                            <div class="navbar-nav align-items-center me-auto w-100">
                                <div class="nav-item d-flex align-items-center w-100">
                                    <form action="/my/portal-dashboard/project_hub" method="get"
                                          class="d-flex align-items-center" id="my_search_form">
                                        <input type="text"
                                               name="search"
                                               t-att-value="search"
                                               class="form-control border-0 shadow-none ps-1 ps-sm-2 d-md-block d-none"
                                               placeholder="Search project name..."
                                               oninput="if(this.value === '') { document.getElementById('my_search_form').submit(); }"/>

                                        <button type="submit" style="display:none;"></button>
                                    </form>
                                </div>
                            </div>
                        </nav>

                        <div class="content-wrapper">
                            <div class="container-xxl flex-grow-1 container-p-y">

                                <t t-if="active_page == 'project_hub'">
                                    <t t-call="project_portal_management.template_project_hub_content"/>
                                </t>
                                <t t-else="">
                                    <div class="d-flex align-items-center justify-content-center"
                                         style="min-height: 300px;">
                                        <div class="text-center">
                                            <i class="bx bx-pointer mb-3 text-primary" style="font-size: 3rem;"></i>
                                            <h4 class="text-muted">Welcome to LAFT Portal. Please select a department.
                                            </h4>
                                        </div>
                                    </div>
                                </t>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
