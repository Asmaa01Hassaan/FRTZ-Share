<odoo>
    <!-- المصاريف التشغيلية -->
    <record id="view_operational_expense_form" model="ir.ui.view">
        <field name="name">operational.expense.form</field>
        <field name="model">operational.expense</field>
        <field name="arch" type="xml">
            <form string="مصروف تشغيلي">
                <group>
                    <field name="category_id"/>
                    <field name="description"/>
                    <field name="date"/>
                    <field name="amount"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_operational_expense_list" model="ir.ui.view">
        <field name="name">operational.expense.list</field>
        <field name="model">operational.expense</field>
        <field name="arch" type="xml">
            <list>
                <field name="category_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <!-- قائمة -->
    <record id="action_operational_expense" model="ir.actions.act_window">
        <field name="name">المصاريف التشغيلية</field>
        <field name="res_model">operational.expense</field>
        <field name="view_mode">list,form</field>
    </record>


<!--    <menuitem id="menu_operational_expense_root" name="المصاريف التشغيلية" parent="crm.crm_menu_root"/>-->

    <menuitem id="menu_operational_expense" name="سجل المصاريف"
              parent="crm.crm_menu_sales"
              action="action_operational_expense"/>
</odoo>