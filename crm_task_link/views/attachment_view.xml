<odoo>
    <!-- list View -->
    <record id="view_laft_document_line_list" model="ir.ui.view">
        <field name="name">laft.document.line.list</field>
        <field name="model">laft.document.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="attachment_ids"/>
                <field name="required"/>
                <field name="passed"/>
                <field name="user_id" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_laft_document_line_form" model="ir.ui.view">
        <field name="name">laft.document.line.form</field>
        <field name="model">laft.document.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="attachment_ids"/>
                    <field name="required"/>
                    <field name="passed"/>
                    <field name="user_id" readonly="1"/>
                    <field name="project_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_laft_document_line" model="ir.actions.act_window">
        <field name="name">Document Lines</field>
        <field name="res_model">laft.document.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu (under Project main menu) -->
