<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job to Update Delegations -->
        <record id="ir_cron_update_delegations" model="ir.cron">
            <field name="name">Update Employee Delegations</field>
            <field name="model_id" ref="employee_delegation.model_hr_employee_delegation"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_delegations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>

