<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit CRM Lead Form -->
    <record id="view_crm_lead_form_delegation" model="ir.ui.view">
        <field name="name">crm.lead.form.delegation</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="delegated_user_id" invisible="not delegated_user_id" readonly="1" string="Delegated To"/>
                <field name="is_delegated" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit CRM Lead Kanban -->
    <record id="view_crm_lead_kanban_delegation" model="ir.ui.view">
        <field name="name">crm.lead.kanban.delegation</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_lead_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div t-if="record.delegated_user_id.raw_value" class="badge badge-warning mt-1">
                    <i class="fa fa-exchange" title="مفوّضة"/> مفوّضة
                </div>
                <field name="delegated_user_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit CRM Lead List -->
    <record id="view_crm_lead_tree_delegation" model="ir.ui.view">
        <field name="name">crm.lead.list.delegation</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="delegated_user_id" optional="show" string="Delegated To"/>
            </xpath>
        </field>
    </record>


    <!-- Inherit CRM Lead Search -->
    <record id="view_crm_lead_search_delegation" model="ir.ui.view">
        <field name="name">crm.lead.search.delegation</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="delegated_user_id"/>
            </xpath>
            <xpath expr="//filter[@name='assigned_to_me']" position="after">
                <filter string="Delegated to Me" name="delegated_to_me" domain="[('delegated_user_id', '=', uid)]"/>
                <filter string="Delegated" name="delegated" domain="[('is_delegated', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>

