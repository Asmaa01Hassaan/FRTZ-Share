<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- My Profile Form View -->
    <record id="view_my_profile_delegation" model="ir.ui.view">
        <field name="name">My Profile - Delegations</field>
        <field name="model">hr.employee</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="My Profile">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3 class="text-muted">
                            <field name="job_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Current Delegation" invisible="not has_active_delegation">
                            <field name="has_active_delegation" invisible="1"/>
                            <field name="active_delegation_id" invisible="not has_active_delegation" readonly="1">
                                <form>
                                    <group>
                                        <group>
                                            <field name="delegate_to_employee_id" readonly="1"/>
                                            <field name="date_from" readonly="1"/>
                                            <field name="date_to" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="reason" readonly="1"/>
                                            <field name="state" readonly="1"/>
                                        </group>
                                    </group>
                                    <footer>
                                        <button name="action_cancel" string="Cancel Delegation" type="object" class="btn-danger"/>
                                    </footer>
                                </form>
                            </field>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="My Delegations" name="delegations">
                            <field name="delegation_ids" context="{'default_employee_id': active_id}">
                                <list string="Delegations" decoration-success="state=='active'" decoration-muted="state in ['expired', 'cancelled']" create="1" edit="1">
                                    <field name="delegate_to_employee_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="reason"/>
                                    <field name="state" widget="badge" decoration-success="state=='active'" decoration-danger="state=='expired'" decoration-muted="state=='cancelled'"/>
                                    <field name="delegated_opportunities_count" string="Opportunities"/>
                                    <field name="delegated_tasks_count" string="Tasks"/>
                                    <field name="delegated_activities_count" string="Activities"/>
                                    <button name="action_activate" string="Activate" type="object" icon="fa-check-circle" invisible="state != 'draft'" class="btn-success"/>
                                    <button name="action_cancel" string="Cancel" type="object" icon="fa-times-circle" invisible="state not in ['draft', 'active']" class="btn-danger"/>
                                </list>
                                <form>
                                    <header>
                                        <button name="action_activate" string="Activate" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                                        <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'active']"/>
                                        <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                                    </header>
                                    <sheet>
                                        <div class="oe_title">
                                            <h1>
                                                <span invisible="id">New Delegation</span>
                                                <span invisible="not id">Delegation to <field name="delegate_to_employee_id" readonly="1" class="oe_inline"/></span>
                                            </h1>
                                        </div>
                                        <group>
                                            <group string="Delegation Details">
                                                <field name="employee_id" invisible="1"/>
                                                <field name="delegate_to_employee_id" domain="[('id', '!=', employee_id)]" options="{'no_create': True, 'no_open': True}"/>
                                                <field name="date_from"/>
                                                <field name="date_to"/>
                                            </group>
                                            <group string="Additional Information">
                                                <field name="reason" placeholder="e.g., Annual Leave, Sick Leave, Training, etc."/>
                                                <field name="notes" placeholder="Any additional notes or instructions..."/>
                                                <field name="is_current" readonly="1"/>
                                            </group>
                                        </group>
                                        
                                        <group string="Delegation Statistics" invisible="state == 'draft'">
                                            <group>
                                                <field name="delegated_opportunities_count" string="Opportunities Delegated"/>
                                                <field name="delegated_tasks_count" string="Tasks Delegated"/>
                                                <field name="delegated_activities_count" string="Activities Delegated"/>
                                            </group>
                                        </group>
                                        
                                        <div class="alert alert-info mt-3" role="alert" invisible="state != 'draft'">
                                            <i class="fa fa-info-circle"/> 
                                            <strong>Note:</strong> Once activated, all your CRM opportunities, project tasks, and activities will be automatically delegated to the selected employee.
                                        </div>
                                        
                                        <div class="alert alert-success mt-3" role="alert" invisible="state != 'active'">
                                            <i class="fa fa-check-circle"/> 
                                            <strong>Active:</strong> This delegation is currently active. The selected employee can now access and work on your delegated items.
                                        </div>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Statistics" name="statistics" invisible="delegation_count == 0">
                            <group>
                                <group string="Total Delegations">
                                    <field name="delegation_count"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open My Profile -->
    <record id="action_my_profile_delegation" model="ir.actions.server">
        <field name="name">My Profile</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code"><![CDATA[
from odoo.exceptions import UserError

# Find employee linked to current user
employee = env['hr.employee'].search([('user_id', '=', env.user.id)], limit=1)

if not employee:
    # If no employee found, show error
    raise UserError('No employee record found for your user account. Please contact your administrator.')

# Open employee form with custom view
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'hr.employee',
    'res_id': employee.id,
    'view_mode': 'form',
    'view_id': env.ref('employee_delegation.view_my_profile_delegation').id,
    'target': 'current',
    'context': {
        'form_view_ref': 'employee_delegation.view_my_profile_delegation',
    }
}
]]></field>
    </record>

    <!-- Action to create delegation directly -->
    <record id="action_create_delegation" model="ir.actions.act_window">
        <field name="name">Create Delegation</field>
        <field name="res_model">hr.employee.delegation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_employee_id': active_id,
        }</field>
    </record>

    <!-- Menu Item under Settings or as standalone -->
    <menuitem
        id="menu_my_profile_delegation"
        name="My Delegation"
        action="action_my_profile_delegation"
        parent="hr.menu_hr_root"
        sequence="5"
        groups="base.group_user"/>
</odoo>

