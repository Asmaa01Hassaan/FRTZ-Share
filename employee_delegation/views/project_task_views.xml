<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Project Task Form -->
    <record id="view_project_task_form_delegation" model="ir.ui.view">
        <field name="name">project.task.form.delegation</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="delegated_user_id" invisible="not delegated_user_id" readonly="1" string="Delegated To"/>
                <field name="is_delegated" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Project Task Kanban -->
    <record id="view_project_task_kanban_delegation" model="ir.ui.view">
        <field name="name">project.task.kanban.delegation</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div t-if="record.delegated_user_id.raw_value" class="badge badge-warning mt-1">
                    <i class="fa fa-exchange" title="مفوّضة"/> مفوّضة
                </div>
                <field name="delegated_user_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Project Task List -->
    <record id="view_project_task_tree_delegation" model="ir.ui.view">
        <field name="name">project.task.list.delegation</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="delegated_user_id" optional="show" string="Delegated To"/>
            </xpath>
        </field>
    </record>


    <!-- Inherit Project Task Search -->
    <record id="view_project_task_search_delegation" model="ir.ui.view">
        <field name="name">project.task.search.delegation</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="delegated_user_id"/>
            </xpath>
            <xpath expr="//filter[@name='my_tasks']" position="after">
                <filter string="Delegated to Me" name="delegated_to_me" domain="[('delegated_user_id', '=', uid)]"/>
                <filter string="Delegated" name="delegated" domain="[('is_delegated', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>

