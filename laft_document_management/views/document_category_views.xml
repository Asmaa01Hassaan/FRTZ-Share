<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_document_category_tree" model="ir.ui.view">
        <field name="name">document.category.tree</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <list string="تصنيفات الملفات" decoration-danger="is_system">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_type"/>
                <field name="icon"/>
                <field name="attachment_count"/>
                <field name="is_system" string="نظام" widget="boolean"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_document_category_form" model="ir.ui.view">
        <field name="name">document.category.form</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <form string="تصنيف الملفات">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-o">
                            <field name="attachment_count" widget="statinfo" string="ملفات"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="معطل" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_type"/>
                            <field name="icon" placeholder="fa-folder"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                            <field name="is_system" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="description" placeholder="وصف التصنيف..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_document_category_kanban" model="ir.ui.view">
        <field name="name">document.category.kanban</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="code"/>
                <field name="icon"/>
                <field name="color"/>
                <field name="attachment_count"/>
                <templates>
                    <t t-name="card">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <i t-att-class="'fa ' + record.icon.raw_value + ' fa-3x'" 
                                       t-att-style="'color: ' + kanban_color(record.color.raw_value)"/>
                                    <h5 class="ms-3 mb-0">
                                        <field name="name"/>
                                    </h5>
                                </div>
                                <div class="text-muted">
                                    <field name="attachment_count"/> ملف
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button name="action_view_attachments" type="object" 
                                        class="btn btn-primary btn-sm w-100">
                                    <i class="fa fa-eye"/> عرض الملفات
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_document_category" model="ir.actions.act_window">
        <field name="name">تصنيفات الملفات</field>
        <field name="res_model">document.category</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء تصنيف جديد للملفات
            </p>
            <p>
                التصنيفات تساعدك في تنظيم الملفات بشكل أفضل.
            </p>
        </field>
    </record>

</odoo>

