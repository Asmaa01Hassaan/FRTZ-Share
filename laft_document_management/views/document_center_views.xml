<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================== -->
    <!-- CRM Leads Kanban View (Folder Style) -->
    <!-- ========================================== -->
    <record id="view_crm_lead_document_center_kanban" model="ir.ui.view">
        <field name="name">crm.lead.document.center.kanban</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="total_document_count"/>
                <field name="opportunity_files_count"/>
                <field name="technical_files_count"/>
                <field name="financial_files_count"/>
                <field name="contract_files_count"/>
                <field name="purchase_files_count"/>
                <field name="general_files_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <i class="fa fa-folder text-warning me-2"/>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id" widget="many2one_avatar_user"/>
                                <div class="mt-2">
                                    <span class="badge bg-primary">
                                        <i class="fa fa-file-o"/> 
                                        <t t-esc="record.total_document_count.value"/> ملفات
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <t t-if="record.opportunity_files_count.raw_value > 0">
                                        <span class="badge bg-info me-1">فرصة: <t t-esc="record.opportunity_files_count.value"/></span>
                                    </t>
                                    <t t-if="record.technical_files_count.raw_value > 0">
                                        <span class="badge bg-success me-1">فنية: <t t-esc="record.technical_files_count.value"/></span>
                                    </t>
                                    <t t-if="record.financial_files_count.raw_value > 0">
                                        <span class="badge bg-warning me-1">مالية: <t t-esc="record.financial_files_count.value"/></span>
                                    </t>
                                    <t t-if="record.contract_files_count.raw_value > 0">
                                        <span class="badge bg-danger me-1">عقود: <t t-esc="record.contract_files_count.value"/></span>
                                    </t>
                                    <t t-if="record.general_files_count.raw_value > 0">
                                        <span class="badge bg-secondary me-1">عامة: <t t-esc="record.general_files_count.value"/></span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- CRM Leads List View (Table Style) -->
    <record id="view_crm_lead_document_center_list" model="ir.ui.view">
        <field name="name">crm.lead.document.center.list</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <list string="فرص CRM" create="false" edit="false">
                <field name="name" string="اسم الفرصة"/>
                <field name="partner_id" string="العميل"/>
                <field name="total_document_count" string="إجمالي الملفات"/>
                <field name="opportunity_files_count" string="فرصة" optional="show"/>
                <field name="technical_files_count" string="فنية" optional="show"/>
                <field name="financial_files_count" string="مالية" optional="show"/>
                <field name="contract_files_count" string="عقود" optional="show"/>
                <field name="purchase_files_count" string="شراء" optional="show"/>
                <field name="general_files_count" string="عامة" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- CRM Search View with Filters -->
    <record id="view_crm_lead_document_center_search" model="ir.ui.view">
        <field name="name">crm.lead.document.center.search</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="اسم الفرصة" filter_domain="[('name', 'ilike', self)]"/>
                <field name="partner_id" string="العميل"/>
                <separator/>
                <group expand="0" string="تجميع حسب">
                    <filter string="العميل" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ========================================== -->
    <!-- Projects Kanban View (Folder Style) -->
    <!-- ========================================== -->
    <record id="view_project_document_center_kanban" model="ir.ui.view">
        <field name="name">project.project.document.center.kanban</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="total_document_count"/>
                <field name="achievement_files_count"/>
                <field name="approval_docs_count"/>
                <field name="technical_docs_count"/>
                <field name="project_reports_count"/>
                <field name="project_contracts_count"/>
                <field name="invoices_payments_count"/>
                <field name="general_files_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <i class="fa fa-folder text-primary me-2"/>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id" widget="many2one_avatar_user"/>
                                <div class="mt-2">
                                    <span class="badge bg-primary">
                                        <i class="fa fa-file-o"/> 
                                        <t t-esc="record.total_document_count.value"/> ملفات
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <t t-if="record.achievement_files_count.raw_value > 0">
                                        <span class="badge bg-success me-1">إنجاز: <t t-esc="record.achievement_files_count.value"/></span>
                                    </t>
                                    <t t-if="record.approval_docs_count.raw_value > 0">
                                        <span class="badge bg-info me-1">موافقات: <t t-esc="record.approval_docs_count.value"/></span>
                                    </t>
                                    <t t-if="record.technical_docs_count.raw_value > 0">
                                        <span class="badge bg-warning me-1">فنية: <t t-esc="record.technical_docs_count.value"/></span>
                                    </t>
                                    <t t-if="record.project_reports_count.raw_value > 0">
                                        <span class="badge bg-primary me-1">تقارير: <t t-esc="record.project_reports_count.value"/></span>
                                    </t>
                                    <t t-if="record.project_contracts_count.raw_value > 0">
                                        <span class="badge bg-danger me-1">عقود: <t t-esc="record.project_contracts_count.value"/></span>
                                    </t>
                                    <t t-if="record.invoices_payments_count.raw_value > 0">
                                        <span class="badge bg-dark me-1">فواتير: <t t-esc="record.invoices_payments_count.value"/></span>
                                    </t>
                                    <t t-if="record.general_files_count.raw_value > 0">
                                        <span class="badge bg-secondary me-1">عامة: <t t-esc="record.general_files_count.value"/></span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Projects List View (Table Style) -->
    <record id="view_project_document_center_list" model="ir.ui.view">
        <field name="name">project.project.document.center.list</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <list string="المشاريع" create="false" edit="false">
                <field name="name" string="اسم المشروع"/>
                <field name="partner_id" string="العميل"/>
                <field name="total_document_count" string="إجمالي الملفات"/>
                <field name="achievement_files_count" string="إنجاز" optional="show"/>
                <field name="approval_docs_count" string="موافقات" optional="show"/>
                <field name="technical_docs_count" string="فنية" optional="show"/>
                <field name="project_reports_count" string="تقارير" optional="show"/>
                <field name="project_contracts_count" string="عقود" optional="show"/>
                <field name="invoices_payments_count" string="فواتير" optional="show"/>
                <field name="general_files_count" string="عامة" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Projects Search View with Filters -->
    <record id="view_project_document_center_search" model="ir.ui.view">
        <field name="name">project.project.document.center.search</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="اسم المشروع" filter_domain="[('name', 'ilike', self)]"/>
                <field name="partner_id" string="العميل"/>
                <separator/>
                <group expand="0" string="تجميع حسب">
                    <filter string="العميل" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ========================================== -->
    <!-- Actions -->
    <!-- ========================================== -->
    
    <!-- Document Center - CRM Leads with Documents -->
    <record id="action_crm_leads_with_documents" model="ir.actions.act_window">
        <field name="name">تطوير الأعمال (CRM)</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('total_document_count', '>', 0)]</field>
        <field name="search_view_id" ref="view_crm_lead_document_center_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                لا توجد فرص بها ملفات
            </p>
            <p>
                ابدأ بإضافة ملفات إلى الفرص من تاب "الملفات"
            </p>
        </field>
    </record>
    
    <!-- Specify Kanban and List views for CRM action -->
    <record id="action_crm_leads_documents_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_crm_lead_document_center_kanban"/>
        <field name="act_window_id" ref="action_crm_leads_with_documents"/>
    </record>
    
    <record id="action_crm_leads_documents_list" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_crm_lead_document_center_list"/>
        <field name="act_window_id" ref="action_crm_leads_with_documents"/>
    </record>

    <!-- Document Center - Projects with Documents -->
    <record id="action_projects_with_documents" model="ir.actions.act_window">
        <field name="name">المشاريع</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('total_document_count', '>', 0)]</field>
        <field name="search_view_id" ref="view_project_document_center_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                لا توجد مشاريع بها ملفات
            </p>
            <p>
                ابدأ بإضافة ملفات إلى المشاريع من تاب "الملفات"
            </p>
        </field>
    </record>
    
    <!-- Specify Kanban and List views for Projects action -->
    <record id="action_projects_documents_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_project_document_center_kanban"/>
        <field name="act_window_id" ref="action_projects_with_documents"/>
    </record>
    
    <record id="action_projects_documents_list" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_project_document_center_list"/>
        <field name="act_window_id" ref="action_projects_with_documents"/>
    </record>

    <!-- All Documents View -->
    <record id="action_all_documents" model="ir.actions.act_window">
        <field name="name">جميع الملفات</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[
            '|',
            ('res_model', '=', 'crm.lead'),
            ('res_model', '=', 'project.project')
        ]</field>
        <field name="context">{
            'search_default_group_by_category': 1,
        }</field>
    </record>

</odoo>

